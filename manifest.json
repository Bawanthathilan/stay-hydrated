{
    "manifest_version": 2,
    "name": "stay hydrated",
    "version": "1.0",
    "description": "This extension will help you to remind drink water in a periodic time interval. Stay Hydrated",
    "icons": {
        "128": "icon128.png",
        "48": "icon128.png",
        "16": "icon128.png"
    },
   
    "background" : {
        "scripts" : ["background.js"]
      },

    
    "permissions": ["alarms","notifications"],
    "browser_action": {
        "default_icon": "icon128.png",
        "default_popup": "index.html"
    }
}